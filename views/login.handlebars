<section class="login">
    <h1>Login</h1>
    <form class="login-form">
        <label for="login-username" class="form-label">Username: </label>
        <input type="text" id="login-username" name="login-username" class="form-control">
        <label for="login-password" class="form-label">Password: </label>
        <input type="password" id="login-password" name="login-password" class="form-control">
        <button type="submit" id="loginButton" class="btn btn-outline-primary m-1">Login</button>
    </form>
    <p><a href="/signup">Sign up instead</a></p>
</section>
<script src="/js/login.js"></script>